<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80EFEDED"
    android:paddingHorizontal="15dp"
    android:paddingBottom="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/txtBackVoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/baseline_arrow_back_24" />

        <ProgressBar
            android:id="@+id/progressBar_Voc"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progress"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/custom_radius_white"
            android:translationZ="1dp"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/img_Voc"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/cloud"
                />

            <TextView
                android:id="@+id/txtWordENG_Voc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="new"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtWordSpelling_Voc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/nju:/"
                android:textColor="@color/_61_400__stress_free_interactive_exercises_color"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >
                <TextView
                    android:id="@+id/txtWordVIE_Voc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mới, mới mẻ, mới lạ"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/txtWordPronoun_Voc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(adjective)"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnContinue_Voc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_getstarted"
            android:backgroundTint="@color/rectangle_6_color"
            android:text="CONTINUE"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_gravity="center" />

    </LinearLayout>


</LinearLayout>