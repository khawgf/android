<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="15dp"
    android:paddingBottom="30dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <TextView
            android:id="@+id/txtBack_Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/baseline_arrow_back_24" />

        <ProgressBar
            android:id="@+id/progressBar_Quiz"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="100"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/custom_progress"
            />


    </LinearLayout>

    <TextView
        android:id="@+id/txtTime_Quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_timer"
        android:drawablePadding="10dp"
        android:text="30:00"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableTint="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/txtQuestCount_Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Question: 1/x"
            android:textColor="#F44336"
            android:textSize="20sp"
            android:textStyle="bold"
            android:drawableEnd="@drawable/ic_question"
            android:drawablePadding="10dp"
            app:drawableTint="#F44336"
            />

        <TextView
            android:id="@+id/txtScore_Quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Score: 0"
            android:textColor="#F44336"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="end"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/txtQuestion_Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_rounded_box"
        android:layout_weight="20"
        android:gravity="center"
        android:text="Câu hỏi?"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:paddingHorizontal="20dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:layout_gravity="center"
        >

        <RadioGroup
            android:id="@+id/radiochoices_Quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            >

            <RadioButton
                android:id="@+id/rdOption1_Quiz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bgbtn"
                android:text="A"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <RadioButton
                android:id="@+id/rdOption2_Quiz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bgbtn"
                android:text="B"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/rdOption3_Quiz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bgbtn"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/rdOption4_Quiz"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/bgbtn"
                android:text="D"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp" />
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/btnContinue_Quiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_getstarted"
        android:backgroundTint="#E6E4EA"
        android:text="CONTINUE"
        android:textColor="#BAB4B4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_gravity="center" />
</LinearLayout>