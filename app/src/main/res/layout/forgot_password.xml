<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:id="@+id/txtBack_ForgetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Forget password?"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter your email address to receive a link to reset your password"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edEmail_ForgetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:drawableStart="@drawable/icon_gmail"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/textColorHint"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:paddingVertical="15dp"/>

        <Button
            android:id="@+id/btnSendMail_ResetPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:text="SEND MAIL"
            android:textSize="20sp"
            android:background="@drawable/custom_button_getstarted"
            android:backgroundTint="#E6E4EA"
            android:textColor="#BAB4B4"
            />
    </LinearLayout>



</LinearLayout>