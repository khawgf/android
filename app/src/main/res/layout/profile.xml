<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txtBackProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#B1B0B0"
            android:drawableStart="@drawable/baseline_arrow_back_24"
            android:gravity="start|center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="22sp"
            android:layout_weight="1"
            android:textColor="@color/textColorButton"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_settings"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/txtName_Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judy"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/txtEmail_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judy21382"
                android:drawableStart="@drawable/icon_gmail"
                android:drawablePadding="5dp"
                android:textSize="17sp"
                android:textColor="@color/textColorButton"
                />

            <TextView
                android:id="@+id/txtSDT_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joined February 2023"
                android:drawableStart="@drawable/icon_phonecall"
                android:drawablePadding="5dp"
                android:textSize="17sp"
                android:textColor="@color/textColorButton"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_vietnam"
                />

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgUser_Profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_user"
            app:shapeAppearanceOverlay="@style/circular"
            android:padding="5dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        >
        <Button
            android:id="@+id/btnShare_Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_radius_white"
            android:text="Share social"
            android:drawableStart="@drawable/icon_upload"
            android:textStyle="bold"
            android:textColor="#3E5AF4"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:layout_gravity="center"
            android:paddingHorizontal="100dp"
            android:contentDescription="Share social"
            android:drawablePadding="20dp"
            android:elevation="8dp"
            android:textSize="16sp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:background="@color/textColorHint"
        android:layout_marginHorizontal="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        />

</LinearLayout>